---
layout: default
---
<div class="container component">

  <div class="row">

    <div class="col-sm-9 col-xs-12">
      <h1>
        {{title}}
        <a href="{{package.repository.url}}/blob/master/src/{{component}}">View source on GitHub</a>
      </h1>

      {{#markdown }}
        {{> body  }}
      {{/markdown }}

      <nav class="visible-xs-block">
        <ul class="pager">
          {{#each pages}}
            {{#is data.layout 'component'}}
              {{#if this.isCurrentPage}}
                {{#each ../../../pages}}
                  {{#is index ../prev}}
                    <li class="previous"><a href="{{relativeLink}}"><span aria-hidden="true">&larr;</span> {{data.title}}</a></li>
                  {{/is}}
                  {{#is index ../next}}
                    <li class="next"><a href="{{relativeLink}}">{{data.title}} <span aria-hidden="true">&rarr;</span></a></li>
                  {{/is}}
                {{/each}}
              {{/if}}
            {{/is}}
          {{/each}}
        </ul>
      </nav>
    </div>

    <nav class="col-sm-3 hidden-xs">
      <ul class="nav nav-stacked fixed nav-sidebar">
        {{#each _config.component-ids}}
          <li>
            {{#each ../_config.components}}
              {{#is @key ../this}}
                <h4>{{name}}</h4>
              {{/is}}
            {{/each}}
            <ul class="nav nav-stacked">
              {{#each ../pages}}
                {{#is data.namespace ../this}}
                    <li class="{{#if this.isCurrentPage}}active{{/if}}">
                      <a href="{{this.relativeLink}}">
                        {{data.title}}
                      </a>
                    </li>
                {{/is}}
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>
    </nav>

  </div>

</div>
